{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@utils": [
        "src/utils"
      ],
    },
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx",
    "pages/**/*",
    "src/**/*",],
  "exclude": ["node_modules"]
}
